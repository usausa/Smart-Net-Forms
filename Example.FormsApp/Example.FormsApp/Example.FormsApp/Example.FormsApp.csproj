    </EmbeddedResource>
    <EmbeddedResource Update="Modules\Markup\MarkupView.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Modules\Messaging\MessagingView.xaml">
