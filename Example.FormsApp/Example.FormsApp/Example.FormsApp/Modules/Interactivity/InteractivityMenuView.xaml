<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:resolver="clr-namespace:Smart.Forms.Resolver;assembly=Smart.Forms"
             xmlns:interactivity="clr-namespace:Example.FormsApp.Modules.Interactivity;assembly=Example.FormsApp"
             xmlns:views="clr-namespace:Example.FormsApp.Views;assembly=Example.FormsApp"
             mc:Ignorable="d"
             x:Class="Example.FormsApp.Modules.Interactivity.InteractivityMenuView"
             d:DataContext="{d:DesignInstance Type={x:Type interactivity:InteractivityMenuViewModel}}"
             resolver:BindingContextResolver.Type="{x:Type interactivity:InteractivityMenuViewModel}"
             views:ShellProperty.Title="Interactivity"
             views:ShellProperty.Function1Enabled="False" views:ShellProperty.Function1Text="&#xf107;"
             views:ShellProperty.Function4Enabled="False" views:ShellProperty.Function4Text="&#xf10a;">

    <Grid Style="{StaticResource MenuGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Style="{StaticResource NavigationButton}"
                Text="ValueRequest"
                Command="{Binding ForwardCommand}" CommandParameter="{views:ViewId ResolveRequest}"/>
        <Button Grid.Row="1" Style="{StaticResource NavigationButton}"
                IsEnabled="False"
                Text=""/>
        <Button Grid.Row="2" Style="{StaticResource NavigationButton}"
                IsEnabled="False"
                Text=""/>
        <Button Grid.Row="3" Style="{StaticResource NavigationButton}"
                IsEnabled="False"
                Text=""/>
        <Button Grid.Row="4" Style="{StaticResource NavigationButton}"
                IsEnabled="False"
                Text=""/>
        <Button Grid.Row="5" Style="{StaticResource NavigationButton}"
                IsEnabled="False"
                Text=""/>
        <Button Grid.Row="6" Style="{StaticResource NavigationButton}"
                IsEnabled="False"
                Text=""/>
        <Button Grid.Row="7" Style="{StaticResource NavigationButton}"
                IsEnabled="False"
                Text=""/>

    </Grid>

</ContentView>
